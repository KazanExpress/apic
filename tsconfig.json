{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "esnext"
    ],
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "omnic/*": ["./lib/*"]
    },
    "typeRoots": [
      "./lib/types",
      "@types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "@types/node",
    "@types/jest",
    "./lib",
    "./tests"
  ]
}
